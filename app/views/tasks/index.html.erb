
<h1>My tasks</h1>
<ol>
<div class="box">
  <% @tasks.each do |task| %>
    <div class="card">
      <% if task.completed? %>
        <i class="fa-solid fa-check text-success"></i>
      <% else %>
        <i class="fa-solid fa-xmark text-danger"></i>
      <% end %>
      <li> <%= link_to "#{task.title} -", task_path(task.id) %></li>
      <li><%= link_to task_path(task),
        data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} do %>
        <i class="fa-solid fa-trash-can text-dark"></i>
      <% end %>
      </li>
    </div>
  <% end %>
</div>
</ol>
<div class="back-button d-flex justify-content-center border-top">
  <%= link_to tasks_new_path do %>
    <button class="btn btn-primary mt-5">
      <i class="fa-solid fa-plus"></i>
    </button>
  <% end %>
</div>
